<div class="col-md-9">
  <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <h2><%="Mediciones"%></h2>
            <div class="card card-primary">
              <div class="card-header">
                <h3><%="Creando nueva medición para empleados"%></h3>
                <div class="card-tools">
                  <button type="button" class="btn btn-tool btn-sm" data-card-widget="collapse" data-toggle="tooltip"
                          title="Collapse">
                    <i class="fa fa-minus"></i></button>
                </div>
              </div>
                <div class="card-body">
                  <%= form_for(@emptemperature, url: {action: 'update'}, html: { method: :put, class: 'form-horizontal' }) do |form| %>
                    <% if @emptemperature.errors.any? %>
                      <div id="error_explanation">
                        <h2><%= pluralize(@emptemperature.errors.count, "error") %> prohibited this emptemperature from being saved:</h2>

                        <ul>
                        <% @emptemperature.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                        </ul>
                      </div>
                    <% end %>
                    <form class="form-horizontal">
                      <div class="form-group row">
                        <%= form.label 'Medida por: ', class:"col-sm-3 col-form-label" %>
                        <div class="col-sm-8">
                          <%= form.text_field :done_by, class:"form-control" %> 
                        </div>
                      </div>

                      <div class="form-group row">
                        <%= form.label 'Día y Hora: ', class:"col-sm-3 col-form-label"%>
                         <div class="col-sm-8">
                          <%= form.text_field :day_and_time, class:"form-control" %> 
                        </div>
                      </div>

                      <div class="form-group row">
                        <%= form.label 'Nombre Completo: ', class:"col-sm-3 col-form-label"%>
                         <div class="col-sm-8">
                          <%= form.text_field :full_name,class:"form-control" %> 
                        </div>
                      </div>

                      <div class="form-group row">
                        <%= form.label 'Teléfono: ', class:"col-sm-3 col-form-label" %>
                        <div class="col-sm-8">
                          <%= form.text_field :phone, class:"form-control" %> 
                        </div>
                      </div>

                      <div class="form-group row ">
                        <%= form.label 'Dirección:', class:"col-sm-3 col-form-label" %>
                        <div class="col-sm-8">
                          <%= form.text_field :address, class:"form-control" %> 
                        </div>
                      </div>

                      <div class="form-group row">
                        <%= form.label 'Temperatura: ', class:"col-sm-3 col-form-label"%>
                        <div class="col-sm-8">
                          <%= form.text_field :temperature, class:"form-control" %> 
                        </div>
                      </div>

                      <div class="form-group row">
                        <%= form.label 'Síntomas: ', class:"col-sm-3 col-form-label" %>
                        <div class="col-sm-8">
                          <%= form.select :symptoms, sintomas, {selected: @current_symptoms}, {multiple: 'multiple', class:"col-md-9 select2bs4"} %>
                        </div>
                      </div>

                      <div class="form-group row">
                        <div class="offset-sm-2 col-sm-8">
                          <%= form.submit 'Proceder', class:"btn btn-primary"%>
                        </div>
                      </div>
                      <div class="form-group row">
                        <div class="offset-sm-2 col-sm-8">
                          <%= link_to 'Atrás', :back , class:"btn btn-primary fa fa-arrow-left"%>
                        </div>
                      </div>
                    </form>
                    <% end %>
                </div>
              </div>
          <!-- /.nav-tabs-custom -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div><!-- /.container-fluid -->
  </section>
<!-- /.content -->
</div>


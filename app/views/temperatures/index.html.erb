<p id="notice"><%= notice %></p>

<h1>Temperatures</h1>

<table>
  <thead>
    <tr>
      <th>Checked by</th>
      <th>Full name</th>
      <th>Checked at</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Temperature</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @temperatures.each do |temperature| %>
      <tr>
        <td><%= temperature.checked_by %></td>
        <td><%= temperature.full_name %></td>
        <td><%= temperature.checked_at %></td>
        <td><%= temperature.address %></td>
        <td><%= temperature.phone %></td>
        <td><%= temperature.temperature %></td>
        <td><%= temperature.status %></td>
        <td><%= link_to 'Mostrar medición', temperature %></td>
        <td><%= link_to 'Editar medición', edit_temperature_path(temperature) %></td>
        <td><%= link_to 'Borrar Medición', temperature, method: :delete, data: { confirm: 'Quieres realizar esta acción?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

